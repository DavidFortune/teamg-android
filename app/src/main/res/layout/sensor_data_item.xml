<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFE8"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_sensordata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity\nAir\nSoil\nSolar"
            android:layout_toStartOf="@+id/text_view_timestamp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/text_view_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-03-07 19:00"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />



    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

</androidx.cardview.widget.CardView>