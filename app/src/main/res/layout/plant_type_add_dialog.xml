<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/add_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details of Plant Type:"
        android:padding="5dp"
        android:background="#d5dda6"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/plant_type_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New Plant Type"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/air_humidity_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New Air Humidity"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/air_temperature_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New Air Temperature"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/soil_moisture_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New Soil Moisture"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/save_new_plant_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save This" />

    <Button
        android:id="@+id/cancel_new_plant_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel This" />
</LinearLayout>