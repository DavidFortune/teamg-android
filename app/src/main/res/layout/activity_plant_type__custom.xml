<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.teamg_plantproject.PlantType_Custom">

    <TextView
        android:id="@+id/user_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Dear User, please enter the details of your new plant type below:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/edit_new_plant_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="New Plant Type Name is _____(letters only)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_new_air_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="New Air Humidity is ___ %"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_new_air_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="New Air Temperature is ___ degrees"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_new_soil_moisture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="New Soil Moisture is ___ %"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/show_new_plant_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#57FFC107"
        android:text="Show Result" />

    <Button
        android:id="@+id/confirm_goback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3FFC107"
        android:text="Confirm" />

    <Button
        android:id="@+id/cancel_new_plant_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel" />

    <TextView
        android:id="@+id/tv_new_plant_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_new_air_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_new_air_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_new_soil_moisture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp" />

</LinearLayout>